{
  "name": "electron-puppeteer-cloner",
  "version": "0.3.0",
  "description": "A modern Electron app for cloning websites with Puppeteer, featuring cookie sharing and asset optimization",
  "main": "src/main/main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "puppeteer",
    "web-cloning",
    "scraping",
    "automation"
  ],
  "author": "HoanNN",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.0.2"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "dexie": "^4.0.8",
    "express": "^5.1.0",
    "fs-extra": "^11.2.0",
    "mime": "^4.1.0",
    "ora": "^9.0.0",
    "postcss": "^8.4.33",
    "postcss-url": "^10.1.3",
    "puppeteer": "^24.26.0",
    "split.js": "^1.6.5",
    "wait-on": "^9.0.1"
  },
  "build": "./electron-builder.json"
}
